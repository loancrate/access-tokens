{
  "name": "access-tokens-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Personal access token library and tools",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loancrate/access-tokens.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo run lint",
    "release": "changeset publish",
    "release:local": "pnpm verify && pnpm release",
    "test": "turbo run test",
    "test-smoke": "turbo run test-smoke",
    "test-int": "scripts/start-localstack.sh && turbo run test-int",
    "test:coverage": "turbo run test -- --coverage && turbo run test-int -- --coverage && scripts/merge-coverage.sh",
    "typecheck": "turbo run typecheck",
    "verify": "turbo run build lint typecheck test-smoke && pnpm test:coverage && pnpm format:check",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "cpy-cli": "^6.0.0",
    "eslint": "^10.0.2",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "prettier": "^3.6.2",
    "vitest": "^4.0.18",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.20.0"
}
